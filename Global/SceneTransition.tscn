	}
	else {
		b = 1.0 - b;
		b = b * 2.0 - 1.0;
		float r = fract(b + UV.x * 8.0 + UV.y);
		b = r + b > UV.x ? 1.0 : 0.0;
	}
	COLOR = vec4(0.0, 0.0, 0.0, b);
}"

